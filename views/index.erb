<h3>CMS App</h3>
<p id="header_line">-------------------------------------------------------------<p>

<h4>Document List:</h4>
<ul id="doc_list">
  <% @files.each do |file| %>
    <li><a href="/<%= file %>"><%= file %></a>
      <a href="/<%= file %>/edit">Edit</a>
    </li>
    <form class="inline_form" action="/<%= file %>/delete" method="post">
      <button type="submit">Delete</button>
    </form>
    <form class="inline_form" action="/<%= file %>/duplicate" method="post">
      <button type="submit">Duplicate File</button>
    </form>
  <% end %>
</ul>

<a href="/files/new">Create new document</a>

<%= signin_signout_signup_button %>
<%= upload_image_button %>
